############################################
# DATABASE
############################################
DB_HOST=127.0.0.1
DB_NAME=literary_repo
DB_USER=<your_db_user>
DB_PASS=<your_db_password>
DB_CHARSET=utf8mb4

############################################
# APP SETTINGS
############################################
APP_ENV=local            # 'local' or 'production'
APP_DEBUG=true           # true to show errors; false to suppress
BASE_URL=http://localhost  # No trailing slash

############################################
# SESSION
############################################
SESSION_LIFETIME=1440     # In seconds

############################################
# CACHE
############################################
CACHE_TTL=3600           # In seconds

############################################
# MAIL (optional)
############################################
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=<username>
MAIL_PASSWORD=<password>
MAIL_ENCRYPTION=tls      # tls or ssl

############################################
# OTHER
############################################
# Feature toggles, API keys, etc.
FEATURE_X_ENABLED=false
