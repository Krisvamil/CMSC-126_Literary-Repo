############################################
# DATABASE
############################################
DB_HOST=127.0.0.1
DB_NAME=literary_repo
DB_USER=your_db_user
DB_PASS=your_db_password
DB_CHARSET=utf8mb4

############################################
# APP SETTINGS
############################################
# local | production
APP_ENV=local
# true to display errors, false to hide
APP_DEBUG=true
# Base URL to your public folder (no trailing slash)
# e.g. http://localhost or https://example.com
BASE_URL=http://localhost

############################################
# SESSION
############################################
# Lifetime in seconds
SESSION_LIFETIME=1440

############################################
# CACHE
############################################
# In seconds
CACHE_TTL=3600

############################################
# MAIL (optional)
############################################
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=username
MAIL_PASSWORD=password
MAIL_ENCRYPTION=tls

############################################
# OTHER
############################################
# e.g. API keys, feature toggles
# FEATURE_X_ENABLED=false
